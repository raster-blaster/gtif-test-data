      "type": "nominal",
      "title": "Station"
    },
    "tooltip": [
      {
        "field": "station_name",
        "type": "nominal",
        "title": "Station"
      },
      {
        "field": "station_code",
        "type": "nominal",
        "title": "Code"
      },
      {
        "field": "date",
        "type": "temporal",
        "title": "Date"
      },
      {
        "field": "pm25",
        "type": "quantitative",
        "title": "PM2.5"
      }
    ]
  }
