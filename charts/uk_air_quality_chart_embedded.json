{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "PM2.5 timeseries for selected station(s)",
  "data": {
    "values": []
  },
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
